lind&quot;,&quot;section&quot;:{&quot;resourceType&quot;:&quot;dailybeast2/components/pages/wrap&quot;,&quot;external&quot;:false,&quot;hideByline&quot;:false,&quot;id&quot;:&quot;/content/dailybeast/world&quot;,&quot;longTitle&quot;:&quot;World News&quot;,&quot;rubric&quot;:&quot;&quot;,&quot;shortTitle&quot;:&quot;World News&quot;,&quot;specialContentFlag&quot;:&quot;&quot;,&quot;title&quot;:&quot;world&quot;,&quot;type&quot;:&quot;wrap&quot;,&quot;url&quot;:&quot;/world.html&quot;},&quot;shortTitle&quot;:&quot;Putin’s Useful (British) Idiots&quot;,&quot;shortenedUrl&quot;:&quot;http://thebea.st/1oyzhJs&quot;,&quot;specialContentFlag&quot;:&quot;&quot;,&quot;subTitle&quot;:&quot;From Neville Chamberlain to the pages of today’s ‘Guardian,’ many members of the British elite, left and right, have proved themselves suckers for totalitarianism.&quot;,&quot;tags&quot;:[{&quot;id&quot;:&quot;topic:world&quot;,&quot;name&quot;:&quot;world&quot;,&quot;namespace&quot;:&quot;topic&quot;,&quot;title&quot;:&quot;World News&quot;},{&quot;id&quot;:&quot;entity:country/united_kingdom&quot;,&quot;name&quot;:&quot;united_kingdom&quot;,&quot;namespace&quot;:&quot;entity&quot;,&quot;path&quot;:&quot;country&quot;,&quot;title&quot;:&quot;United Kingdom&quot;},{&quot;id&quot;:&quot;entity:person/vladimir_putin&quot;,&quot;name&quot;:&quot;vladimir_putin&quot;,&quot;namespace&quot;:&quot;entity&quot;,&quot;path&quot;:&quot;person&quot;,&quot;title&quot;:&quot;Vladimir Putin&quot;},{&quot;id&quot;:&quot;entity:country/russia&quot;,&quot;name&quot;:&quot;russia&quot;,&quot;namespace&quot;:&quot;entity&quot;,&quot;path&quot;:&quot;country&quot;,&quot;title&quot;:&quot;Russia&quot;}],&quot;title&quot;:&quot;Putin&#39;s Useful (British) Idiots&quot;,&quot;type&quot;:&quot;article&quot;,&quot;url&quot;:&quot;http://www.thedailybeast.com/articles/2014/08/15/putin-s-useful-british-idiots.html&quot;,&quot;wrap&quot;:{&quot;resourceType&quot;:&quot;dailybeast2/components/pages/wrap&quot;,&quot;ex